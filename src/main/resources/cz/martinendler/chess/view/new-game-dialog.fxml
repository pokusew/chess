<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane
	xmlns:fx="http://javafx.com/fxml"
	prefWidth="800.0"
	fx:controller="cz.martinendler.chess.ui.controllers.NewGameDialogController"
>
	<children>
		<GridPane
			AnchorPane.leftAnchor="20.0"
			AnchorPane.rightAnchor="20.0"
			AnchorPane.topAnchor="20.0"
			AnchorPane.bottomAnchor="20.0"
			hgap="20"
			vgap="20"
		>
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="400"/>
			</columnConstraints>
			<children>
				<Label
					text="Starting position in FEN"
					GridPane.columnIndex="0"
					GridPane.rowIndex="0"
				/>
				<Label
					text="Game type"
					GridPane.columnIndex="0"
					GridPane.rowIndex="1"
				/>
				<Label
					text="Human side"
					GridPane.columnIndex="0"
					GridPane.rowIndex="2"
				/>
				<TextField
					fx:id="fenField"
					GridPane.columnIndex="1"
					GridPane.rowIndex="0"
				/>
				<ComboBox
					fx:id="typeField"
					GridPane.columnIndex="1"
					GridPane.rowIndex="1"
				/>
				<ComboBox
					fx:id="humanSideField"
					GridPane.columnIndex="1"
					GridPane.rowIndex="2"
				/>
				<ButtonBar GridPane.rowIndex="3" GridPane.columnSpan="2">
					<buttons>
						<Button mnemonicParsing="false" onAction="#handleSubmit" text="Start"/>
						<Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel"/>
					</buttons>
				</ButtonBar>
			</children>
		</GridPane>
	</children>
</AnchorPane>
